<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#D3CFCF"
    tools:context=".activities.UpdateContact">

    <ImageView
        android:id="@+id/thumbnailEdit"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="#c0c0c0"
        android:src="@drawable/ic_person"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/firstNameEdit"
        android:layout_below="@+id/thumbnailEdit"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="#fff"
        android:textColorHint="#c5c5c5"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:hint="First Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/lastNameEdit"
        android:layout_below="@+id/firstNameEdit"
        android:layout_width="match_parent"
        android:background="#fff"
        android:textColorHint="#c5c5c5"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:hint="Last Name"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/phoneNumberEdit"
        android:layout_below="@+id/lastNameEdit"
        android:layout_width="match_parent"
        android:background="#fff"
        android:textColorHint="#c5c5c5"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:hint="Phone number"
        android:inputType="phone"/>

    <EditText
        android:id="@+id/addressEdit"
        android:layout_below="@+id/phoneNumberEdit"
        android:layout_width="match_parent"
        android:background="#fff"
        android:textColorHint="#c5c5c5"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:hint="Address"
        android:inputType="textPersonName"/>

    <EditText
        android:id="@+id/emailEdit"
        android:layout_below="@+id/addressEdit"
        android:layout_width="match_parent"
        android:background="#fff"
        android:textColorHint="#c5c5c5"
        android:layout_marginTop="10dp"
        android:textColor="#000"
        android:padding="10dp"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:inputType="textEmailAddress"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:src="@drawable/ic_done"
        android:layout_margin="10dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnBack"
        android:layout_width="79dp"
        android:layout_height="54dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="325dp"
        android:layout_marginBottom="18dp"
        android:src="@drawable/ic_back" />
</RelativeLayout>